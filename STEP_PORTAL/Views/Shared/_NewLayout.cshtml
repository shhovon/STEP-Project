@using STEP_PORTAL.Models;
@using STEP_DEMO.Models;
@{ var notifications = ViewBag.Notifications as IEnumerable<tblNotification> ?? new List<tblNotification>(); }



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>STEP - User Panel</title>
    <link rel="stylesheet" href="~/Content/vendors/feather/feather.css">
    <link rel="stylesheet" href="~/Content/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="~/Content/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="~/Content/vendors/datatables.net-bs4/dataTables.bootstrap4.css">
    <link rel="stylesheet" href="~/Content/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" type="text/css" href="~/Content/js/select.dataTables.min.css">
    <link rel="stylesheet" href="~/Content/css/vertical-layout-light/style.css">
    <link rel="shortcut icon" href="~/Content/images/favicon.ico" />
</head>
<body>
    <div class="container-scroller">
        <nav class="navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
            <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-center">
                <a class="navbar-brand brand-logo mr-5" href="../Home/Dashboard"><img src="~/Content/images/pcfc-logo.png" class="mr-2" alt="logo" /></a>
                <a class="navbar-brand brand-logo-mini" href="../Home/Dashboard"><img src="~/Content/images/pcfc-logo-mini.png" alt="logo" /></a>
            </div>
            <div class="navbar-menu-wrapper d-flex align-items-center justify-content-end">
                <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
                    <span class="icon-menu"></span>
                </button>

                <ul class="navbar-nav navbar-nav-right">
                    <!-- Notification Icon -->
                    <li class="nav-item">
                        <a class="nav-link" href="javascript:void(0);" onclick="toggleNotificationDropdown()">
                            <i class="ti-bell text-primary"></i>
                            @if (ViewBag.UnreadNotificationCount != null && (int)ViewBag.UnreadNotificationCount > 0)
                            {
                                <span class="badge badge-pill badge-danger">@ViewBag.UnreadNotificationCount</span>
                            }
                        </a>
                        <div id="notificationDropdown" class="dropdown-menu">
                            <ul class="notification-list">
                                @if (ViewBag.Notifications != null && ((List<tblNotification>)ViewBag.Notifications).Any())
                                {
                                    foreach (var notification in (List<tblNotification>)ViewBag.Notifications)
                                    {
                                        var isRead = notification.IsRead ?? false;
                                        var readClass = isRead ? "notification-read" : "notification-unread";
                                        <li class="@readClass">
                                            <a href="@Url.Content(notification.RedirectUrl)"
                                               onclick="markAsRead(@notification.NotificationId)">
                                                @notification.NotificationMessage
                                            </a>
                                        </li>
                                    }
                                }
                                else
                                {
                                    <li>No new notifications</li>
                                }
                            </ul>


                        </div>
                    </li>



                    <li class="nav-item nav-profile dropdown">
                        <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown" id="profileDropdown">
                            <p class="ti-user text-primary"> @Session["Name"]</p>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right navbar-dropdown" aria-labelledby="profileDropdown">
                            <p class="dropdown-item">
                                <i class="ti-layout-list-post text-primary">
                                    @Session["EmployeeCode"]
                                </i>
                            </p>
                            <p class="dropdown-item">
                                <i class="ti-layout-list-post text-primary">
                                    @Session["Designation"]
                                </i>
                            </p>
                            <p class="dropdown-item">
                                <i class="ti-layout-list-post text-primary">
                                    @Session["Department"]
                                </i>
                            </p>
                            <p class="dropdown-item">
                                <i class="ti-layout-list-post text-primary">
                                    @Session["Section"]
                                </i>
                            </p>
                            <a href="@Url.Action("Logout", "Home")" class="dropdown-item">
                                <i class="ti-power-off text-primary">
                                    Logout
                                </i>
                            </a>
                        </div>
                    </li>
            </div>
        </nav>
        <div class="container-fluid page-body-wrapper">

            @*            ************COLOR CHANGE THEME*************@

            @*            <div class="theme-setting-wrapper">
                    <div id="settings-trigger"><i class="ti-settings"></i></div>
                    <div id="theme-settings" class="settings-panel">
                        <i class="settings-close ti-close"></i>
                        <p class="settings-heading">Sidebar Theme</p>
                        <div class="sidebar-bg-options selected" id="sidebar-light-theme"><div class="img-ss rounded-circle bg-light border mr-3"></div>Light</div>
                        <div class="sidebar-bg-options" id="sidebar-dark-theme"><div class="img-ss rounded-circle bg-dark border mr-3"></div>Dark</div>
                        <p class="settings-heading mt-2">Header Theme</p>
                        <div class="color-tiles mx-0 px-4">
                            <div class="tiles success"></div>
                            <div class="tiles warning"></div>
                            <div class="tiles danger"></div>
                            <div class="tiles info"></div>
                            <div class="tiles dark"></div>
                            <div class="tiles default"></div>
                        </div>
                    </div>
                </div>*@

            <nav class="sidebar sidebar-offcanvas" id="sidebar">
                <ul class="nav">

                    @*                    NEW NAVBAR                *@

                    @{
                        var userMenus = Session["AssignedMenuItems"] as List<UserMenu>;
                        foreach (var menu in userMenus)
                        {
                            if (menu.Main_Menu_Id == "0")
                            {
                                var subMenus = userMenus.Where(p => p.Main_Menu_Id == menu.ID.ToString()).ToList();
                                if (subMenus.Count > 0)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link" data-toggle="collapse" href="#menu-@menu.ID" aria-expanded="false" aria-controls="menu-@menu.ID">
                                            <i class="icon-layout menu-icon"></i>
                                            <span class="menu-title">@menu.Menu_Name</span>
                                            <i class="menu-arrow"></i>
                                        </a>
                                        <div class="collapse" id="menu-@menu.ID">
                                            <ul class="nav flex-column sub-menu">
                                                @{
                                                    foreach (var subMenu in subMenus)
                                                    {
                                                        <li class="nav-item">
                                                            <a class="nav-link" href="@Url.Action(subMenu.Menu_URL)">@subMenu.Menu_Name</a>
                                                        </li>
                                                    }
                                                }
                                            </ul>
                                        </div>
                                    </li>
                                }
                                else
                                {
                                    <li class="nav-item">
                                        <a class="nav-link" href="@Url.Action(menu.Menu_URL)">
                                            <i class="icon-layout menu-icon"></i>
                                            <span class="menu-title">@menu.Menu_Name</span>
                                        </a>
                                    </li>
                                }
                            }
                        }
                    }

                </ul>
            </nav>
            <div class="main-panel">
                <div class="content-wrapper">
                    <div class="row">
                        <div class="col-md-12 grid-margin">
                            <div class="row" style="width:100%;">
                                <div class="col-md-12">
                                    @RenderBody()
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                <footer class="footer">
                    <div class="d-sm-flex justify-content-center justify-content-sm-between">
                        <span class="text-muted text-center text-sm-left d-block d-sm-inline-block">Copyright © 2024</span>
                        <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center">Shovon Roy</span>
                    </div>
                </footer>
            </div>
        </div>
    </div>

    @*    custom css*@
    <style>
        .sidebar-offcanvas {
            width: calc(280px + 50px);
        }

        .table-form {
            width: 400%;
            margin: 0 auto;
        }

        .nav-link {
            display: block;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: normal;
        }

        .menu-title {
            display: block;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: normal;
            min-width: 100px;
            padding-right: 20px;
        }

        .sidebar-offcanvas .collapse .sub-menu .nav-link {
            white-space: normal;
            overflow: visible;
            display: block;
            text-overflow: ellipsis;
            padding-right: 20px;
        }

        .sidebar-offcanvas .collapse .sub-menu {
            padding-left: 20px;
        }

        .notification-list {
            list-style-type: none;
            padding: 0;
            margin: 0;
        }

            .notification-list li {
                padding: 10px;
                border-bottom: 1px solid #ddd;
            }

            .notification-list a {
                text-decoration: none;
                color: #333;
                display: block;
            }

        .notification-read {
            background-color: #f9f9f9;
            color: #999;
        }

        .notification-unread {
            background-color: #fff;
            font-weight: bold;
            color: #333;
        }
    </style>


    <script src="~/Content/vendors/js/vendor.bundle.base.js"></script>
    <script src="~/Content/vendors/chart.js/Chart.min.js"></script>
    <script src="~/Content/vendors/datatables.net/jquery.dataTables.js"></script>
    <script src="~/Content/vendors/datatables.net-bs4/dataTables.bootstrap4.js"></script>
    <script src="~/Content/js/dataTables.select.min.js"></script>
    <script src="~/Content/js/off-canvas.js"></script>
    <script src="~/Content/js/hoverable-collapse.js"></script>
    <script src="~/Content/js/template.js"></script>
    <script src="~/Content/js/settings.js"></script>
    <script src="~/Content/js/todolist.js"></script>
    <script src="~/Content/js/dashboard.js"></script>
    <script src="~/Content/js/Chart.roundedBarCharts.js"></script>
    <script src="~/Content/js/jquery-3.4.1.min.js"></script>


    <script>
    function toggleNotificationDropdown() {
        var dropdown = document.getElementById('notificationDropdown');
        dropdown.style.display = dropdown.style.display === 'none' ? 'block' : 'none';
    }

    function markAsRead(notificationId) {
        $.post('@Url.Action("MarkNotificationAsRead")', { notificationId: notificationId }, function (data) {
            if (data.success) {
            }
        });
    }
    </script>

    @RenderSection("scripts", required: false)
</body>

</html>


