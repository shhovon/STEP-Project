@model DisplayAllDataViewModel

<head>
    <link rel="stylesheet" type="text/css" href="~/Content/css/CustomStyles.css">
</head>


<h3 style="text-align:center;">Confirm Submission</h3>
<br />

<table class="table">
    <thead>
        <tr>
            <th>Selected KRA</th>
            <th>Selected KPI</th>
            <th>KPI Outcome</th>
        </tr>
    </thead>

    <tbody>
        @if (Model != null && Model.StepData.Count > 0)
        {
            foreach (var item in Model.StepData)
            {
                <tr>
                    <td>@item.KRA</td>
                    <td>@item.KPI</td>
                    <td>@(item.KPI_OUTCOME != null ? item.KPI_OUTCOME : "")</td>
                </tr>
            }
        }
    </tbody>
</table>

@if (Model.SpecialFactors != null)
{
    <table class="table">
        <thead>
            <tr>
                <th colspan="2">Special Factors</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><strong>Description:</strong></td>
                <td>@Model.SpecialFactors.Description</td>
            </tr>
        </tbody>
    </table>
}

@if (Model.TrainingNeed != null)
{
    <table class="table">
        <thead>
            <tr>
                <th colspan="2">Training Need</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><strong>Title:</strong></td>
                <td>@Model.TrainingNeed.Title</td>
            </tr>
            <tr>
                <td><strong>By When:</strong></td>
                <td>@Model.TrainingNeed.By_When</td>
            </tr>
            <tr>
                <td><strong>Training Type:</strong></td>
                <td>@Html.DisplayFor(model => model.TrainingNeed.Train_Type)</td>
            </tr>
            <tr>
                <td><strong>Status:</strong></td>
                <td>@Model.TrainingNeed.Status</td>
            </tr>
        </tbody>
    </table>
}

<br />
<form id="submitForm" action="@Url.Action("SubmitForApproval", "Employee")" method="post">
    <input type="hidden" />
    <button type="submit" class="btn btn-primary" id="submitButton">Send For Approval</button>
</form>

@section scripts {
    <script>
        $(function () {
            $('#submitForm').submit(function (event) {
                event.preventDefault();

                if (confirm('Are you sure you want to send this data for approval?')) {
                    $.ajax({
                        url: '@Url.Action("SubmitForApproval", "Employee")',
                        type: 'POST',
                        success: function (response) {
                            if (response.success) {
                                alert(response.message);
                                window.location.href = '@Url.Action("DisplayAllData", "Employee")';
                            } else {
                                alert(response.message);
                            }
                        }
                    });
                }
            });
        });
    </script>
}



