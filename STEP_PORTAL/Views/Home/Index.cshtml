<script>
        function validateForm() {
            var kpiCount = 0;
            var kpiInputs = document.querySelectorAll('.kpi-textarea');
            kpiInputs.forEach(function (input) {
                if (input.value.trim() !== "") {
                    kpiCount++;
                }
            });
            if (kpiCount < 3) {
                alert("Please provide 3 KPIs");
                return false;
            }
            return true;
        }
    </script>

