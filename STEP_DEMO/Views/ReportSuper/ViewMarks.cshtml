@model List<MarksData>

<head>
    <link rel="stylesheet" type="text/css" href="~/Content/css/CustomStyles.css">
</head>

<body>
    <h3>View Marks</h3>
    <br />

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
@*                        <th>KRA</th>
                        <th>KPI</th>*@
                        <th>Outcome</th>
                        <th>Performance Marks</th>
                        <th>Total Average</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            @*                            <td>@item.KRA</td>
                <td>@item.KPI</td>*@
                            <td>@item.KPI_OUTCOME</td>
                            <td>@item.Marks_Achieved</td>
                            <td></td>
                        </tr>
                    }
@*                    <tr>
                        <td colspan="2" style="text-align:center;">Total Average</td>
                        <td></td>
                    </tr>*@
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p>No marks data available</p>
    }
</body>

