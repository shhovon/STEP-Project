<table class="table">
    <thead>
        <tr>
            <th>Selected KRA</th>
            <th>Selected KPI</th>
            <th>KPI Outcome</th>
        </tr>
    </thead>

    <tbody>
        @if (Model != null && Model.GroupedData.Count > 0)
        {
            foreach (var item in Model.GroupedData)
            {
                <tr>
                    <td>@item.KRA</td>
                    <td>
                        @for (int i = 0; i < item.KPIIs.Count; i++)
                        {
                            <div>@item.KPIIs[i]</div>
                            if (i != item.KPIIs.Count - 1)
                            {
                                <hr>
                            }

                        }
                        <br />
                    </td>
                    <td>
                        @for (int i = 0; i < item.KPIIs.Count; i++)
                        {
                            var stepDataForKPI = Model.StepData.FirstOrDefault(s => s.KPI == item.KPIIs[i] && s.KRA == item.KRA);
                            if (stepDataForKPI != null)
                            {
                                <div>@(stepDataForKPI.KPI_OUTCOME != null ? stepDataForKPI.KPI_OUTCOME : "")</div>
                            }
                            else
                            {
                                <div></div>
                            }
                            if (i != item.KPIIs.Count - 1)
                            {
                                <hr>
                            }
                        }
                    </td>
                </tr>
            }
        }
    </tbody>
</table>





@if (Model.SpecialFactors != null)
{
    <table class="table">
        <thead>
            <tr>
                <th colspan="2">Special Factors</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><strong>Description:</strong></td>
                <td>@Model.SpecialFactors.Description</td>
            </tr>
        </tbody>
    </table>
}

@if (Model.TrainingNeed != null)
{
    <table class="table">
        <thead>
            <tr>
                <th colspan="2">Training Need</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><strong>Title:</strong></td>
                <td>@Model.TrainingNeed.Title</td>
            </tr>
            <tr>
                <td><strong>By When:</strong></td>
@*                <td>@Model.TrainingNeed.By_When</td>*@
                <td>@(Model.TrainingNeed.By_When.HasValue ? Model.TrainingNeed.By_When.Value.Date.ToString("dd-MM-yyyy") : "")</td>
            </tr>
            <tr>
                <td><strong>Training Type:</strong></td>
                <td>@Html.DisplayFor(model => model.TrainingNeed.Train_Type)</td>
            </tr>
            <tr>
                <td><strong>Status:</strong></td>
                <td>@Model.TrainingNeed.Status</td>
            </tr>
        </tbody>
    </table>
}

