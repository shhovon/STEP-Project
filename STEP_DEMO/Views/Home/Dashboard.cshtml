<head>
    <link rel="stylesheet" type="text/css" href="~/Content/css/CustomStyles.css">
</head>

<style>
    .user-info-container {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
    }

    .user-info-table {
        width: 50%;
        border-collapse: collapse;
        border: 1px solid #ddd;
        margin-bottom: 20px;
    }

        .user-info-table th,
        .user-info-table td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        .user-info-table th {
            background-color: #f2f2f2;
        }

        .user-info-table tr:nth-child(even) {
            background-color: #f2f2f2;
        }

    .logout-btn {
        display: inline-block;
        background-color: red;
        color: white !important; 
        padding: 10px 20px;
        text-align: center;
        text-decoration: none;
        border-radius: 5px;
        transition: background-color 0.3s;
        border: none;
        outline: none;
    }

        .logout-btn:hover {
            background-color: #cc0000;
        }

        .logout-btn,
        .logout-btn:visited,
        .logout-btn:hover,
        .logout-btn:active {
            color: inherit;
            text-decoration: none;
        }
</style>

<h3 style="text-align:center;">Welcome to Dashboard</h3>
<br />
<br />
<div class="user-info-container">
    <table class="user-info-table">
        <thead></thead>
        <tbody>
            <tr>
                <td>Name</td>
                <td>@Session["Name"]</td>
            </tr>
            <tr>
                <td>Employee Code</td>
                <td>@Session["EmployeeCode"]</td>
            </tr>
            <tr>
                <td>Department</td>
                <td>@Session["Department"]</td>
            </tr>
            <tr>
                <td>Section</td>
                <td>@Session["Section"]</td>
            </tr>
            <tr>
                <td>Designation</td>
                <td>@Session["Designation"]</td>
            </tr>
@*            <tr>
                <td>Reg ID</td>
                <td>@ViewBag.RegID</td>
            </tr>
            <tr>
                <td>Email ID</td>
                <td>@ViewBag.EmailID</td>
            </tr>
            <tr>
                <td>Mobile Number</td>
                <td>@ViewBag.MobileNoPerson</td>
            </tr>*@
        </tbody>
    </table>

</div>
